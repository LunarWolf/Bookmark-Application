<p id="notice"><%= notice %></p>

<h2>
  <%= @site.title %>
</h2>

<p>
  <b>Url:</b>
  <%= @site.url %>
</p>


<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
  </tr>
<% @site.bookmarks.each do |bookmark| %>
  <tr>
    <td><%= link_to bookmark.title, bookmark %></td>
    <td><%= bookmark.url %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back', sites_path %>
